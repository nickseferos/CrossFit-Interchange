<% content_for :title, "#{@blog.title} | CrossFit Interchange" %>
<% content_for :meta, "#{@blog.body.html_safe.split[0...50].join(' ')+'...'}" %>
<div class="row">
	<div class="small-12 columns">
		<h1><%= @blog.title %></h1>
	</div>
	<div class="small-12 columns">
		<h5 class="subheader">By <%= @blog.author %> on <%= @blog.date.strftime "%b %d, %Y" %></h5>   <%= social_share_button_tag(@blog.title) %>
	</div>
	<div class="small-12 columns">
		<%= image_tag(@blog.image) %>
	</div>
	<div class="small-12 columns"><hr></div>
	<div class="small-1 columns"></div>
	<div class="small-10 small-centered columns">
		<p class="text-justify"><%= @blog.body.html_safe %></p>
	</div>
	<div class="small-1 columns"></div>
</div>
<div class="small-1 columns"></div>
  <div class="small-10 small-centered columns" >
		<div id="disqus_thread"></div>
			<script>
			(function() { // DON'T EDIT BELOW THIS LINE
			var d = document, s = d.createElement('script');

			s.src = '//crossfitinterchange.disqus.com/embed.js';

			s.setAttribute('data-timestamp', +new Date());
			(d.head || d.body).appendChild(s);
			})();
			</script>
			<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
  </div>
  <div class="small-1 columns"></div>
</div>