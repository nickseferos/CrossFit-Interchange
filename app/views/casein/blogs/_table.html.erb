<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Date", :date %></th>
			<th><%= casein_sort_link "Author", :author %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th><%= casein_sort_link "Body", :body %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% blogs.each do |blog| %>
		<tr>
			<td><%= casein_table_cell_link blog.title, casein_blog_path(blog) %></td>
			<td><%= casein_table_cell_link blog.date, casein_blog_path(blog) %></td>
			<td><%= casein_table_cell_link blog.author, casein_blog_path(blog) %></td>
			<td><%= casein_table_cell_link blog.image, casein_blog_path(blog) %></td>
			<td><%= casein_table_cell_link blog.body, casein_blog_path(blog) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_blog_path(blog), :method => :delete, :data => { :confirm => "Are you sure you want to delete this blog?" }) %>
			</td>
		</tr>
	<% end %>
</table>