<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Date", :date %></th>
			<th><%= casein_sort_link "Info", :info %></th>
			<th><%= casein_sort_link "Strength", :strength %></th>
			<th><%= casein_sort_link "Conditioning", :conditioning %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% workouts.each do |workout| %>
		<tr>
			<td><%= casein_table_cell_link workout.date, casein_workout_path(workout) %></td>
			<td><%= casein_table_cell_link workout.info, casein_workout_path(workout) %></td>
			<td><%= casein_table_cell_link workout.strength, casein_workout_path(workout) %></td>
			<td><%= casein_table_cell_link workout.conditioning, casein_workout_path(workout) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_workout_path(workout), :method => :delete, :data => { :confirm => "Are you sure you want to delete this workout?" }) %>
			</td>
		</tr>
	<% end %>
</table>