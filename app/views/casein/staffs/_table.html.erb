<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Image", :image %></th>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Bio", :bio %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% staffs.each do |staff| %>
		<tr>
			<td><%= casein_table_cell_link staff.image, casein_staff_path(staff) %></td>
			<td><%= casein_table_cell_link staff.name, casein_staff_path(staff) %></td>
			<td><%= casein_table_cell_link staff.bio, casein_staff_path(staff) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_staff_path(staff), :method => :delete, :data => { :confirm => "Are you sure you want to delete this staff?" }) %>
			</td>
		</tr>
	<% end %>
</table>