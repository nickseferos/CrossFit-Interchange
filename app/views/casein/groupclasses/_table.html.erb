<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Length", :length %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% groupclasses.each do |groupclass| %>
		<tr>
			<td><%= casein_table_cell_link groupclass.title, casein_groupclass_path(groupclass) %></td>
			<td><%= casein_table_cell_link groupclass.length, casein_groupclass_path(groupclass) %></td>
			<td><%= casein_table_cell_link groupclass.description, casein_groupclass_path(groupclass) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_groupclass_path(groupclass), :method => :delete, :data => { :confirm => "Are you sure you want to delete this group class?" }) %>
			</td>
		</tr>
	<% end %>
</table>