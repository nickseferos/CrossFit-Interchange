<h3 class="text-center">Welcome to <strong>CrossFit Interchange</strong></h3>
<h4 class="text-center">Administration &amp; Content Control Panel</h4>
<br /><br />
<div class="row">
  <div class=" small-10 large-7 small-centered large-centered columns" >
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <br /><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
      </div>

      <div class="field">
        <br />
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>
      <br />
      <div class="row">
        <% if devise_mapping.rememberable? -%>
          <div class="field small-6 columns">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'subheader' %>
          </div>
        <% end -%>

        <%= render "devise/shared/links" %>
      </div>
      <hr class="small-7 small-centered columns">
      <div class="actions">
        <center><%= f.submit "Log in" , class: 'hollow button'%></center>
      </div>
    <% end %>
  </div>
</div>